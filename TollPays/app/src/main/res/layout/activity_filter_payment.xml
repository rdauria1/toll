<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_filter_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amaxzadigital.tollpays.paymenthistory.FilterPaymentActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="Period"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/flFilerPaymentOneWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Week"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/ivFilterPaymentOneWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/ic_white_check"
            android:clickable="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFilerPaymentTwoWeeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Weeks"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbFilterPaymentTwoWeeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/ic_white_check"
            android:clickable="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFilerPaymentFourWeeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Weeks"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbFilterPaymentFourWeeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/ic_white_check"
            android:clickable="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFilerPaymentThreeMonths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Weeks"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbFilterPaymentThreeMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/ic_white_check"
            android:clickable="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFilerPaymentSixMonths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 Weeks"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbFilterPaymentSixMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/ic_white_check"
            android:clickable="false" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFilerPaymentOneYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Year"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbFilterPaymentOneYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/ic_white_check"
            android:clickable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeperator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="Search by user"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/flFilerPaymentUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFilerPaymentUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Users"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/dropdown_arrow" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeperator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="Search by License Plate"
        android:textStyle="bold" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <FrameLayout
            android:id="@+id/flFilterPaymentPlateNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvFilterPaymentPlateNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Plate No"
                android:textColor="@color/colorTextDark"
                android:textSize="16sp" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/flFilterPaymentVehicleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/flFilterPaymentPlateNo"
            app:layout_constraintStart_toEndOf="@+id/flFilterPaymentPlateNo"
            app:layout_constraintTop_toTopOf="@+id/flFilterPaymentPlateNo">

            <TextView
                android:id="@+id/tvFilterPaymentVehicleName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Vehicle Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


        </FrameLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/dropdown_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/colorPrimary"
        android:text="Apply"
        android:textColor="@android:color/white" />
</LinearLayout>
